<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.liuqingc.mysimplepaint.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/done_button">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/color_listView"
            android:minWidth="32dp"
            android:layout_weight="0.9" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_weight="0.1" />

    </LinearLayout>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brushBar"
        android:max="20"
        android:contentDescription="Stroke width"
        android:minWidth="120dp"
        android:contextClickable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/done_button"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@+id/done_button" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/draw_spinner"
        android:minWidth="120dp"
        android:minHeight="24dp"
        android:layout_alignTop="@+id/done_button"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/done_button"
        android:layout_toRightOf="@+id/currentColorView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done!"
        android:id="@+id/done_button"
        android:enabled="true"
        android:textSize="12dp"
        android:minWidth="32dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/undo_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undo"
        android:id="@+id/undo_button"
        android:textSize="12dp"
        android:minWidth="32dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentColorView"
        android:layout_toRightOf="@+id/brushBar"
        android:layout_alignTop="@+id/done_button"
        android:layout_alignBottom="@+id/done_button"
        android:maxHeight="48dp"
        android:maxWidth="64dp"
        android:minHeight="48dp"
        android:minWidth="64dp"
        android:padding="5dp" />

</RelativeLayout>
